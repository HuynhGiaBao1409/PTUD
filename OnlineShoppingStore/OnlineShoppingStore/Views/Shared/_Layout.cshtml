<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MyMainLayOut.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  <div class="container">
      <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-6">
              <div class="logo">
                  <h1><a href="#">Online<span>Shopping Store</span></a></h1>
                  <p>My Shop</p>
              </div>
          </div>

          <div class="col-md-6 col-sm-6 col-xs-6">
              <div class="account">
                <ul>
                    <li>
                        <div class="hidden-xs">
                            <h4><a>Call</a></h4>
                            <p>018##-#####</p>
                        </div>

                        <div class="visible-xs">

                        </div>
                    </li>
                </ul>
              </div>
          </div>
          </div>
          <div class="row ">
              <div class="col-md-12">
                  <div class="nav-menus " style="border-top: 2px solid #333; padding-top: 10px; padding-bottom: 20px;">
                      <ul class="nav nav-pills">
                          <li class="nav-item fw-bolder ">
                              <a class="nav-link active text-bg-dark p-2.5 m-1 " aria-current="page" href="#">Home</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link p-2.5 m-1 text-dark" href="#">Location</a>
                          </li>
                          <li class="nav-item">
                              <a class="nav-link p-2.5 m-1 text-dark" href="#">About</a>
                          </li>
                      </ul>
                  </div>
              </div>
          </div>


        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="row col-md-12 copyright">
                    <div class="col col-md-6 col-sm-6 copyright-left">
                        <p>&copy; @DateTime.Now.Year - OnlineShopping. All rigth reserved</p>
                    </div>
                    <div class="col col-md-6 col-sm-6 copyright-right">
                        <ul class="list-unstyled list-social">
                            <li><a href="#" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="#" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                        </ul> 
                    </div>
                </div>
            </div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
