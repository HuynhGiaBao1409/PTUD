@model MyClass.Model.Menus

@{
    ViewBag.Title = "Chi tiết danh mục Menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">CHI TIẾT MENU</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit","Menu",  new { id = Model.Id })" class="btn-sm btn-success"> <i class="fa fa-edit"> Sửa</i></a>
                        <a href="@Url.Action("Index","Menu")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <div class="row">
                    <div class="col-md-9">
                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Link)</th>
                                <th>@Html.DisplayNameFor(model => model.TypeMenu)</th>
                                <th>@Html.DisplayNameFor(model => model.Order)</th>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                            </tr>

                            <tr>
                                <td><input type="checkbox" name="checkid" value="" /></td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.Link)</td>
                                <td>@Html.DisplayFor(model => model.TypeMenu)</td>
                                <td>@Html.DisplayFor(model => model.Order)</td>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                            </tr>

                        </table>
                    </div>
                </div>
            </div><!-- /.card-body -->
        </div><!-- /.card -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->