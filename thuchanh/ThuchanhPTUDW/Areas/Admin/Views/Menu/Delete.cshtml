@model MyClass.Model.Menus

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">BẠN CÓ CHẮC CHẮN XÓA MENU NÀY?</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index","Menu")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <tr>
                                    <th>#</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Link)</th>
                                    <th>@Html.DisplayNameFor(model => model.TypeMenu)</th>
                                    <th>@Html.DisplayNameFor(model => model.Order)</th>
                                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                                    <th>Chức năng</th>
                                </tr>
                                <tr>
                                    <td><input type="checkbox" name="checkid" value="" /></td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                    <td>@Html.DisplayFor(model => model.Link)</td>
                                    <td>@Html.DisplayFor(model => model.TypeMenu)</td>
                                    <td>@Html.DisplayFor(model => model.Order)</td>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                    <td>
                                        <button class="btn-sm btn-danger" type="submit" name="Delete"> Xóa [Delete] <i class="fa fa-trash"></i> </button>
                                    </td>
                                </tr>

                            </table>
                        </div>
                    </div>
                </div><!-- /.card-body -->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
}
